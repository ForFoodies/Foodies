<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foodies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="actionBarSize">45dp</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/app_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/light_gray_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/app_black</item>
        <item name= "android:textViewStyle" > @style/RubikTextViewStyle </item>
        <item name= "android:buttonStyle" > @style/RubikButtonStyle </item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>
    <style name= "RubikTextViewStyle" parent= "android:Widget.TextView" >
        <item name= "android:fontFamily" > @font/rubik_light </item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name= "RubikTitleStyle" parent= "android:Widget.TextView" >
        <item name= "android:fontFamily" > @font/rubik_medium </item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name= "RubikButtonStyle" parent= "android:Widget.Holo.Button" >
        <item name= "android:fontFamily" > @font/rubik_medium </item>
    </style>

    <style name="AppBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleCentered">true</item>
    </style>
</resources>