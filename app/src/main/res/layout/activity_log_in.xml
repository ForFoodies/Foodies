<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:foreground="#88000000"
        android:foregroundTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/initial_background" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/rubik_bold"
        android:text="Welcome to Foodies"
        android:textColor="@color/light_gray_1"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Glad to see you again!"
        android:textColor="@color/light_gray_1"
        app:layout_constraintBottom_toTopOf="@+id/btn_login_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/redirect_signin"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/rubik_medium"
        android:text="Log In with Foodies"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_facebook"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:gravity="start|center_vertical"
        android:fontFamily="@font/rubik_medium"
        android:text="Continue with Facebook"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/light_gray_1"
        app:cornerRadius="20dp"
        app:elevation="0dp"
        app:icon="@drawable/facebook"
        app:iconSize="20dp"
        app:iconTint="@color/white"
        android:backgroundTint="@color/facebook_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/redirect_signin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="New to Foodies?"
        android:textColor="@color/light_gray_1"
        app:layout_constraintBottom_toTopOf="@+id/redirect_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/redirect_signup"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/rubik_medium"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/app_black"
        style="?attr/materialButtonOutlinedStyle"
        app:backgroundTint="@color/light_gray_1_glass"
        app:cornerRadius="20dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>